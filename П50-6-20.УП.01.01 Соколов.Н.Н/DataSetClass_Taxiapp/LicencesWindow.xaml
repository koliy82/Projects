<Window x:Class="DataSetClass_Taxiapp.LicencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataSetClass_Taxiapp"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="LICENCES"
        Height="200"
        Width="360"
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid>
        <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="17" Text="Для пользования данной программой, нужно приобрести ключ продукта." Margin="0,10,0,110"></TextBlock>
        <Button Content="Попробовать" Click="Trial_Click" Margin="10,85,0,0" VerticalAlignment="Center" Width="136" Height="69"/>
        <TextBlock FontSize="16" TextAlignment="Center" Text="Введите ключ" Width="176" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,-20,16,0"/>
        <TextBox Height="32" Width="176" HorizontalAlignment="Right" VerticalAlignment="Center" Name="licence_tb" Margin="0,40,16,0"/>
        <Button Content="Активировать" Margin="0,120,16,0"  VerticalAlignment="Center" HorizontalAlignment="Right" Width="176" Click="BuyLicense_Click"/>
    </Grid>
</Window>
