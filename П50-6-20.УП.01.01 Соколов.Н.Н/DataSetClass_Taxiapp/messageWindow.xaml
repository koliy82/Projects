<Window x:Class="DataSetClass_Taxiapp.messageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataSetClass_Taxiapp"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Title="Выйти?" 
        Height="160" Width="320">
    <Grid>
        <TextBlock Height="auto" Width="320" TextAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" Name="msg_tb"/>
        <Button IsDefault = "true" Height="26" Width="68" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="32,0,0,32" FontSize="10" Content="Да" Click="Button_Click"></Button>
        <Button IsCancel="True" Height="26" Width="68" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,32,32" FontSize="10" Content="Нет" Click="Button_Click_1"></Button>
    </Grid>
</Window>
