<Window x:Class="DataSetClass_Taxiapp.SendMailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataSetClass_Taxiapp"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Title="Вход" 
        Closing="Window_Closing"
        Loaded="SendMailWindow_Loaded"
        Height="160" Width="320">
    <Grid>
        <TextBlock Height="26" Width="300" TextAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18" Text="Введите код подтверждения" />
        <TextBox Height="16" Width="128" Name="authCode_tb" HorizontalContentAlignment="Center"/>
        <Button IsDefault = "true" Height="31" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="10" Content="Подтвердить" Click="Button_Click" Margin="0,0,0,10"></Button>
    </Grid>
</Window>
